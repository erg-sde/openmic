<div class="container">

  <h1>Add A New Event!</h1>


  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:event, url: newevent_path) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.label :start %>
        <%= f.datetime_field :start, class: 'form-control', id: 'start_picker'%>
        <%= f.label :end %>
        <%= f.datetime_field :end, class: 'form-control', id: 'end_picker'%>      
        <%= f.submit "Create Event", class: "btn btn-primary" %>
      <% end %>


    </div>
  </div>
</div>
